namespace Meds.Shared.Data;

table HealthState {
    liveness: bool;
    readiness: bool;
    sim_speed: float;
    players: int32;

    version_compiled_at: int64;
    version_hash: string;
}

table ShutdownRequest {
    pid: int32;
}

enum PlayerPromotionLevel : short {
    None,
    Moderator,
    Admin,    
}

table PlayerResponse {
    steam_id: uint64;
    name: string;
    promotion: PlayerPromotionLevel;
    faction_tag: string;
    faction_rank: string;
}

table PlayersResponse {
    players: [PlayerResponse];
}

table PlayerJoinedLeft {
    joined: bool;
    players: int32;
    player: PlayerResponse;
}

table PlayersRequest {
}

table HouseChatChannel {
    house: long;
    channel: string;
    house_name: string;
}

table PlayerChatChannel {
    player: ulong;
    channel: string;
    player_name: string;
}

table GenericChatChannel {
    channel: string;
}

union ChatChannel {
    HouseChatChannel,
    PlayerChatChannel,
    GenericChatChannel,
}

table ChatMessage {
    channel: ChatChannel;
    message: string;
    sender: ulong;
    sender_name: string;
}

table SaveRequest {
    id: long;
    backup_path: string;
}

enum SaveResult : byte {
    Success,
    Failed,
    TimedOut,
}

table SaveResponse {
    id: long;
    result: SaveResult;
}

table ModEventField {
    key: string;
    value: string;
    inline: bool;
}

table ModEventEmbed {
    title: string;
    description: string;
    fields: [ModEventField];
}

table ModEventMessage {
    source_name: string;
    source_mod_id: uint64;
    channel: string;
    message: string;
    embed: ModEventEmbed;
}

table DataStorePlanet {
    min_radius: float;
    avg_radius: float;
    max_radius: float;
    areas_per_face: int32;
    areas_per_region: int32; 
}

table DataStoreGridDatabase {
    max_lod: int32;
    grid_size: float;
}

table DataStoreSync {
    planet: DataStorePlanet;
    grid_database: DataStoreGridDatabase;
}

union Message {
    HealthState,
    ShutdownRequest,
    PlayersResponse,
    PlayersRequest,
    PlayerJoinedLeft,
    ChatMessage,
    SaveRequest,
    SaveResponse,
    ModEventMessage,
    DataStoreSync,
}

table Packet {
    message: Message;
}

root_type Packet;